@*@model IEnumerable<MiniShop.Models.Bd.Good>*@
@model MiniShop.Models.IndexViewModel
@using MiniShop.Util
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Goods</h2>

<p>
    @Html.ActionLink("Create new good", "CreateGood", null, new { @class = "btn btn-primary m-2" })
    @Html.ActionLink("Create new category", "CreateCategory", null, new { @class = "btn btn-primary m-2" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Goods.FirstOrDefault().Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Goods.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Goods.FirstOrDefault().Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Goods)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-primary" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-primary" })
            </td>
        </tr>
    }

</table>
<br />
<div class="btn-group">
    @Html.PageLinks(Model.PageInfo, b => Url.Action("Index",
    new { page = b, category = Model.SelectedCategory, searchTemplate = Model.SearchTemplate }))
</div>